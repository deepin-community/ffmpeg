+int64_t reorder_tms(FTOMXCodecContext *s, int64_t pts, int64_t dts, int64_t duration) {
+    FTOMX_FRAME_TMS *fp = tms_tail;
+    FTOMX_FRAME_TMS *cur = malloc(sizeof(FTOMX_FRAME_TMS));
+    int64_t tms = 0;
+
+    if (!cur) {
+        av_log(s->avctx, AV_LOG_ERROR, "mallloc failed");
+        return tms;
+    }
+
+    memset(cur, 0, sizeof(*cur));
+    if (AV_NOPTS_VALUE != pts) {
+        tms = pts;
+    } else {
+        tms = dts;
+    }
+
+    cur->tms = tms;
+
+    if (!tms_head) {
+        tms_head = cur;
+        tms_tail = cur;
+        return tms;
+    }
+
+    while (fp) {
+        if (fp->tms <= tms) {
+            break;
+        }
+        fp = fp->prev;
+    }
+
+    if (fp) {
+        cur->next = fp->next;
+        cur->prev = fp;
+        if (fp->next) {
+            fp->next->prev = cur;
+        }
+        fp->next = cur;
+    } else {
+        cur->next = tms_head;
+        tms_head = cur;
+    }
+
+    if (!cur->next) {
+        tms_tail = cur;
+    }
+
+    return tms;
+}
